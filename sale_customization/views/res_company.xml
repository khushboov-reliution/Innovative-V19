<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="company_form_view_inherit" model="ir.ui.view">
            <field name="name">res.company.form.view</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_info']/group/group[2]/field[@name='color']" position="after">
                    <field name="header"/>
                    <field name="footer"/>
                    <field name="bank_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>