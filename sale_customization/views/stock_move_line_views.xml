<odoo>
    <record id="view_stock_move_line_operation_tree_inherit_pdf" model="ir.ui.view">
        <field name="name">stock.move.line.operation.tree.pdf</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom_id']" position="after">
                <field name="pdf_attachment" filename="pdf_filename"/>
            </xpath>
        </field>
    </record>

    <record id="view_lot_form_add_attachment" model="ir.ui.view">
        <field name="name">stock.lot.form.add.attachment</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main_group']/group[1]/field[@name='company_id']" position="after">
                <field name="attachment_pdf" filename="attachment_filename"/>
            </xpath>
        </field>
    </record>

