    <record id="view_product_application_loctite_brand_mro_form" model="ir.ui.view">
        <field name="name">product.application.form</field>
        <field name="model">product.application</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="2">
                        <field name="product_brand_id" invisible="1"
                               domain="[('id', 'child_of', user_brand_ids)]"/>
                        <separator string="Pain Point Details" colspan="2"/>
                        <group>
                            <field name="pain_point_category_id" string="Category"/>
                        </group>
                        <group>
                            <field name="pain_point_id"
                                   domain="[('category_id','=',pain_point_category_id)]"
                                   string="Point"
                                   invisible="not pain_point_category_id"/>
                        </group>
                        <separator string="Corrosion/ Erosion Details" colspan="2"/>
                        <group>
                            <field name="total_immersion"/>
                            <field name="intermittent_immersion"/>
                        </group>
                        <group>
                             <field name="dry_condition"/>
                            <field name="vapour_fumes_detail"/>
                        </group>
                        <group>
                            <field name="current_abrasion" string="Abrasion because of"/>
                        </group>
                        <group>
                            <div class="o_row">
                                <label class="fw-bold" string="Particle size" for="current_abrasion_particle_size"/>
                                <field name="current_abrasion_particle_size" class="mw-25"/>
                                <label class="fw-bold" string="&amp; quantity"
                                       for="current_abrasion_particle_quantity"/>
                                <field name="current_abrasion_particle_quantity" class="mw-25"/>
                            </div>
                        </group>
                        <group>
                            <field name="current_wear" string="Wear because of"/>
                        </group>
                        <group>
                            <div class="o_row">
                                <label class="fw-bold" string="Particle size" for="current_wear_particle_size"/>
                                <field name="current_wear_particle_size" class="mw-25"/>
                                <label class="fw-bold" string="&amp; quantity" for="current_wear_particle_quantity"/>
                                <field name="current_wear_particle_quantity" class="mw-25"/>
                            </div>
                        </group>
                        <group>
                            <field name="impact_detail"/>
                        </group>
                        <group>
                            <label for="cavitation"/>
                            <div class="o_row">
                                <field name="cavitation" class="mw-25"/>
                                <span>mm/year</span>
                            </div>
                        </group>
                        <separator string="Temperature" colspan="2"/>
                        <group>
                            <label for="operating_temp_min" string="Operating Temperature"/>
                            <div class="o_row">
                                <field name="operating_temp_min" class="mw-25"/>
                                <span>°C</span>
                                <span>To</span>
                                <field name="operating_temp_max" class="mw-25"/>
                                <span>°C</span>
                            </div>
                        </group>
                        <group/>
                        <group>
                            <label for="min_temperature"/>
                            <div class="o_row">
                                <field name="min_temperature" class="mw-25"/>
                                <span>°C</span>
                            </div>
                            <label for="max_temperature"/>
                            <div class="o_row">
                                <field name="max_temperature" class="mw-25"/>
                                <span>°C</span>
                            </div>
                        </group>
                        <separator string="Application Exposed" colspan="2"/>
                        <group>
                            <field name="abrasion"/>
                        </group>
                        <group>
                            <label for="abrasion_particle_size"/>
                            <div class="o_row">
                                <field class="mw-50" name="abrasion_particle_size"/>
                                <span>mm/micron</span>
                            </div>
                        </group>
                        <group>
                            <field name="wear"/>
                        </group>
                        <group>
                            <field name="wear_particle_size"/>
                            <field name="wear_particle_quantity"/>
                        </group>
                        <group>
                            <label for="pressure" string="Pressure"/>
                            <div class="o_row mw-75">
                                <field name="pressure"/>
                                <field name="over_heating_pressure" class="mw-50"/>
                            </div>
                        </group>
                        <group>
                            <label for="dry_service"/>
                            <div class="o_row">
                                <field name="dry_service" class="mw-25"/>
                                <span>°C</span>
                            </div>
                            <label for="wet_service"/>
                            <div class="o_row">
                                <field name="wet_service" class="mw-25"/>
                                <span>°C</span>
                            </div>
                        </group>
                        <separator string="Details of Chemicals in contact with surface of equipment" colspan="2"/>
                        <field name="chemical_line_ids" widget="one2many" mode="list">
                            <list>
                                <field name="chemical_type"/>
                                <field name="temp_c"/>
                                <field name="concentrate_ppm"/>
                                <field name="ph_range"/>
                                <field name="dissolved_solids"/>
                            </list>
                        </field>
                        <separator string="Equipment history" colspan="2"/>
                        <field name="equipment_line_ids" widget="one2many" mode="list">
                            <list>
                                <field name="equipment_name"/>
                                <field name="original_coating"/>
                                <field name="maintenance_interval"/>
                                <field name="repair_cost"/>
                                <field name="substrate_type"/>
                                <field name="structurally_sound"/>
                            </list>
                        </field>
                        <group>
                            <field name="customer_expectations"/>
                        </group>

                        <separator string="Application Considerations"/>
                        <group>
                            <field name="surface_prep" string="Surface Preparation"/>
                            <label for="available_downtime"/>
                            <div class="o_row mw-75">
                                <field name="available_downtime"/>
                                <field name="downtime_frequency" class="mw-50"/>
                            </div>
                            <field name="area_accessible"/>
                        </group>

                        <separator string="Solution Details" colspan="2"/>
                        <field name="solution_product_ids" widget="one2many" context="{'default_product_brand_id':product_brand_id}">
                            <list>
                                <field name="product_id"/>
                                <field name="solution_product_quantity"/>
                                <field name="frequency"/>
                                <field name="solution_product_uom"/>
                                <field name="currency_id" column_invisible="1"/>
                                <field name="solution_product_price" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="solution_proposed"/>
                            </list>
                        </field>

                        <separator string="Competition Details" colspan="2"/>
                        <group>
                            <field name="competition"/>
                        </group>
                        <field name="competition_ids" invisible='not competition' widget="one2many" mode="list">
                            <list>
                                <field name="competitor_product_id"/>
                                <field name="product_category_id"/>
                                <field name="product_quantity"/>
                                <field name="frequency"/>
                                <field name="tentative_price"
                                       widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="tentative_price" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="other_details"/>
                            </list>
                        </field>
                        <group colspan="2">
                            <field name="other_details"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_product_application" model="ir.actions.act_window">
        <field name="name">Product Application</field>
        <field name="res_model">product.application</field>
        <field name="path">product-application</field>
        <field name="view_mode">kanban,list,form</field>
    </record>
</odoo>
