<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_machine_master_list" model="ir.ui.view">
        <field name="name">machine.master.list</field>
        <field name="model">machine.master</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="machine_model_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="view_machine_master_form" model="ir.ui.view">
        <field name="name">machine.master.form</field>
        <field name="model">machine.master</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="machine_model_ids" widget="one2many">
                            <form>
                                <sheet>
                                    <group>
                                        <field name="machine_model"/>
                                        <field name="machine_type"/>
                                        <field name="machine_series"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_machine_master" model="ir.actions.act_window">
        <field name="name">Machine Master</field>
        <field name="res_model">machine.master</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_machine_model_list" model="ir.ui.view">
        <field name="name">machine.model.list</field>
