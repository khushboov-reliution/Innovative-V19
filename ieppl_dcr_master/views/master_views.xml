    </record>

    <record id="view_machine_model_form" model="ir.ui.view">
        <field name="name">machine.model.form</field>
        <field name="model">machine.model</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="machine_model"/>
                            <field name="machine_make_id" widget="many2one"/>
                        </group>
                        <group>
                            <field name="machine_type"/>
                            <field name="machine_series"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

