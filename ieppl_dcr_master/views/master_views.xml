    <record id="view_solution_product_master_tree" model="ir.ui.view">
        <field name="name">solution.product.master.list</field>
        <field name="model">solution.product.master</field>
        <field name="arch" type="xml">
            <list string="Solution Products" create="true" edit="true" delete="true">
                <field name="product_id"/>
                <field name="product_brand_id"/>
                <field name="solution_product_quantity"/>
                <field name="solution_product_uom"/>
                <field name="solution_product_price"/>
                <field name="frequency"/>
            </list>
        </field>
    </record>

    <record id="view_solution_product_master_form" model="ir.ui.view">
        <field name="name">solution.product.master.form</field>
        <field name="model">solution.product.master</field>
        <field name="arch" type="xml">
            <form string="Solution Product">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="application_id" invisible="1"/>
                            <field name="dcr_form_id" invisible="1"/>
                            <field name="product_brand_id"/>
                            <field name="solution_product_uom"/>
                        </group>
                        <group>
                            <field name="solution_product_quantity"/>
                            <field name="solution_product_price"/>
                            <field name="frequency"/>
                        </group>
                    </group>
                    <group>
                        <field name="solution_proposed" colspan="2"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_solution_product_master" model="ir.actions.act_window">
        <field name="name">Solution Products</field>
        <field name="res_model">solution.product.master</field>
        <field name="view_mode">list,form</field>
    </record>

